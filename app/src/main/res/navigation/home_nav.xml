<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/DevFragment"
        android:name="com.example.apprende4bg12.DevelopmentFragment"
        android:label="Development"
        tools:layout="@layout/fragment_development" >
        <action
            android:id="@+id/development"
            app:destination="@id/DevFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/development"
            app:popUpToInclusive="false" />
    </fragment>



    <fragment
        android:id="@+id/coursesFragment"
        android:name="com.example.apprende4bg12.CoursesFragment"
        android:label="@string/course_label"
        tools:layout="@layout/fragment_courses">
        <argument
            android:name="search"
            app:argType="boolean"
            android:defaultValue="true" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="null"
            app:nullable="true" />
        <argument
            android:name="description"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
    </fragment>
    <fragment

        android:id="@+id/homeFragment"
        android:name="com.example.apprende4bg12.HomeFragment"
        android:label="@string/home_label"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_coursesFragment"
            app:destination="@id/coursesFragment" />
    </fragment>

    <fragment
        android:id="@+id/logoutFragment"
        android:name="com.example.apprende4bg12.LogoutFragment"
        android:label="@string/logout_label"
        tools:layout="@layout/fragment_logout" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.apprende4bg12.SettingsFragment"
        android:label="@string/settings_label"
        tools:layout="@layout/fragment_settings" />
</navigation>