<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CoursesDetailFragment">




    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/course_detail_fragment_image"
        android:layout_width="@dimen/banner_size"
        android:layout_height="@dimen/banner_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/big_top_margin"
        tools:src="@drawable/apprende"
        android:scaleType="centerCrop"
        app:strokeColor="@color/black"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/course_detail_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/course_detail_fragment_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        tools:text="@string/Profile_base_name"
        style="@style/textoTitulo"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logout_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_detail_fragment_name"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin">

            <TextView
                android:id="@+id/course_detail_fragment_about_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Acerca del curso"
                android:layout_marginVertical="@dimen/default_margin"
                android:textAppearance="@style/textoTitulo2"
                />

            <TextView
                android:id="@+id/course_detail_fragment_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/course_detail_fragment_about_it"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Talk to me softly There's something in your eyes Don't hang your head in sorrow And please don't cry"
                android:layout_marginVertical="@dimen/default_margin"
                android:textAppearance="@style/textoParrafo2"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/course_detail_fragment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_detail_fragment_detail"
                tools:text="Programacion"
                android:layout_marginVertical="@dimen/default_margin"
                android:textAppearance="@style/textoTitulo2"
                />

            <RatingBar
                android:id="@+id/course_detail_fragment_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_detail_fragment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_marginTop="@dimen/default_margin"
                />
            <TextView
                android:id="@+id/course_detail_fragment_rating_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/course_detail_fragment_rating"
                app:layout_constraintTop_toTopOf="@id/course_detail_fragment_rating"
                app:layout_constraintBottom_toBottomOf="@id/course_detail_fragment_rating"
                tools:text="4.3"
                android:layout_marginStart="@dimen/default_margin"
                android:textAppearance="@style/textoTitulo3"
                />

            <Button
                android:id="@+id/back_to_home_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/course_detail_fragment_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/big_margin"
                android:text="Unirse a este curso"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>





</androidx.constraintlayout.widget.ConstraintLayout>