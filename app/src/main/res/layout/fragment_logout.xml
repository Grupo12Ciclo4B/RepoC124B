<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.LogoutFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logout_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="@dimen/extra_big_margin_top"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin">

            <com.google.android.material.imageview.ShapeableImageView

                android:id="@+id/logout_fragment_icon"
                android:layout_width="@dimen/icon_category_size"
                android:layout_height="@dimen/icon_category_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/default_margin"
                app:shapeAppearanceOverlay="@style/cutImage"
                android:src="@drawable/apprende"
                android:scaleType="centerCrop"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                />
            <TextView
                android:id="@+id/logout_fragment_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/logout_fragment_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/logout_text"
                android:layout_marginHorizontal="@dimen/big_margin"
                android:layout_marginVertical="@dimen/default_margin"
                android:textAppearance="@style/textoParrafo2"
                android:gravity="center"
                />

            <Button
                android:id="@+id/logout_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/logout_fragment_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/default_margin"
                android:text="Cerrar SesiÃ³n"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>