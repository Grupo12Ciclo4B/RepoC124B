<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_course_icon"
        android:layout_width="@dimen/icon_category_size"
        android:layout_height="@dimen/icon_category_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        tools:srcCompat="@drawable/ic_baseline_library_books_24"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_course_icon"
        app:layout_constraintStart_toEndOf="@id/item_course_icon"
        tools:text="something in the way"
        android:layout_marginStart="@dimen/default_margin"
        style="@style/textoTitulo2"

        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_course_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_course_title"
        app:layout_constraintStart_toEndOf="@id/item_course_icon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="nirvana unplugged, 1994 MTV, all rights are reserved"
        android:layout_marginHorizontal="@dimen/default_margin"
        style="@style/textoParrafo"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_course_icon"
        android:layout_marginTop="15dp"
        android:background="@color/primaryVariant"
        />

</androidx.constraintlayout.widget.ConstraintLayout>