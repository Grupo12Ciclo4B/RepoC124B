<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dev_fragment_banner"
        android:layout_width="0dp"
        android:layout_height="@dimen/banner_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/develop"
        android:scaleType="centerCrop"


        />
    <TextView
        android:id="@+id/courses_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dev_fragment_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/cat_dev"
        android:layout_marginVertical="@dimen/default_margin"
        android:textAppearance="@style/textoTitulo"
        />

    <FrameLayout
        android:id="@+id/courses_fragment_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/courses_fragment_title"
        tools:ignore="MissingConstraints">

<!--        <TextView-->
<!--            android:id="@+id/courses_fragment_title_list"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/dev_fragment_banner"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            android:text="Nuestros Cursos"-->
<!--            android:layout_marginVertical="@dimen/default_margin"-->
<!--            android:visibility="visible"-->
<!--            />-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/courses_fragment_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginHorizontal="@dimen/big_margin"
            android:layout_marginVertical="@dimen/small_margin"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">


            <AutoCompleteTextView
                android:id="@+id/courses_fragment_search_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:hint="@string/search_label"
                />

        </com.google.android.material.textfield.TextInputLayout>



    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courses_fragment_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courses_fragment_title_container"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_courses" />




</androidx.constraintlayout.widget.ConstraintLayout>